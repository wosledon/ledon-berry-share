
@page "/gift-flow"
@using Ledon.BerryShare.Shared
@using Ledon.BerryShare.Shared.Entities
@inject Services.ApiService ApiService

<h3>礼物流水</h3>

<div class="row mb-3">
    <div class="col-md-4">
        <input class="form-control" placeholder="搜索流水..." @bind="search" @bind:event="oninput" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" @onclick="OnSearch">搜索</button>
    </div>
</div>

@if (flows == null)
{
    <p>加载中...</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>金额</th>
                <th>流水时间</th>
                <th>创建时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in flows)
            {
                <tr>
                    <td>@f.Amount</td>
                    <td>@f.StreamAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@f.CreateAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-2" @onclick="() => ShowDetail(f)">详情</button>
                        <button class="btn btn-sm btn-warning" @onclick="() => ShowEdit(f)">编辑</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            <li class="page-item @(pageIndex == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="PrevPage">上一页</button>
            </li>
            <li class="page-item disabled">
                <span class="page-link">第 @pageIndex 页 / 共 @totalPages 页</span>
            </li>
            <li class="page-item @(pageIndex == totalPages ? "disabled" : "")">
                <button class="page-link" @onclick="NextPage">下一页</button>
            </li>
        </ul>
    </nav>
}

<!-- 详情弹窗 -->
<div class="modal fade @(showDetailModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseDetailModal">
    <div class="modal-dialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">流水详情</h5>
                <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
            </div>
            <div class="modal-body">
                @if (selectedFlow != null)
                {
                    <div><strong>金额：</strong> @selectedFlow.Amount</div>
                    <div><strong>流水时间：</strong> @selectedFlow.StreamAt.ToString("yyyy-MM-dd HH:mm")</div>
                    <div><strong>创建时间：</strong> @selectedFlow.CreateAt.ToString("yyyy-MM-dd HH:mm")</div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseDetailModal">关闭</button>
            </div>
        </div>
    </div>
</div>

<!-- 编辑弹窗 -->
<div class="modal fade @(showEditModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseEditModal">
    <div class="modal-dialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">编辑流水</h5>
                <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
            </div>
            <div class="modal-body">
                @if (editFlow != null)
                {
                    <div class="mb-3">
                        <label class="form-label">金额</label>
                        <input class="form-control" type="number" @bind="editFlow.Amount" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">流水时间</label>
                        <input class="form-control" type="datetime-local" @bind-value="editFlow.StreamAt" @bind-value:event="oninput" />
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" @onclick="SaveEdit">保存</button>
                <button class="btn btn-secondary" @onclick="CloseEditModal">取消</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GiftFlowEntity>? flows;
    private int pageIndex = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private string search = string.Empty;

    private GiftFlowEntity? selectedFlow;
    private bool showDetailModal = false;

    private GiftFlowEntity? editFlow;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var query = $"gift-flow/list?search={search}&pageIndex={pageIndex}&pageSize={pageSize}";
        var result = await ApiService.GetAsync<BerryResult<List<GiftFlowEntity>>>(query);
        flows = result?.Data ?? new List<GiftFlowEntity>();
        totalPages = (result?.TotalCount / pageSize) ?? 1;
    }

    private async Task OnSearch()
    {
        pageIndex = 1;
        await LoadData();
    }

    private async Task PrevPage()
    {
        if (pageIndex > 1)
        {
            pageIndex--;
            await LoadData();
        }
    }

    private async Task NextPage()
    {
        if (pageIndex < totalPages)
        {
            pageIndex++;
            await LoadData();
        }
    }

    private void ShowDetail(GiftFlowEntity flow)
    {
        selectedFlow = flow;
        showDetailModal = true;
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedFlow = null;
    }

    private void ShowEdit(GiftFlowEntity flow)
    {
        editFlow = new GiftFlowEntity
        {
            Id = flow.Id,
            Amount = flow.Amount,
            StreamAt = flow.StreamAt
        };
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editFlow = null;
    }

    private async Task SaveEdit()
    {
        if (editFlow != null)
        {
            var result = await ApiService.PutAsync<GiftFlowEntity>("gift-flow/update", editFlow);
            await LoadData();
            CloseEditModal();
        }
    }
}

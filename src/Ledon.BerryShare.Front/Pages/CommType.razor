@page "/comm-type"
@using Ledon.BerryShare.Shared
@using Ledon.BerryShare.Shared.Entities
@using Ledon.BerryShare.Front.Services
@inject Services.ApiService ApiService
@using Ledon.BerryShare.Shared.Results
@inject IJSRuntime JSRuntime

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
        <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
            <i class="bi bi-diagram-3-fill text-white"></i>
        </div>
        <div>
            <h3 class="mb-0">分成类型</h3>
            <small class="text-muted">管理分成比例和税率配置</small>
        </div>
    </div>
    <button class="btn btn-primary" @onclick="ShowAdd">
        <i class="bi bi-plus-lg me-2"></i>新增分成类型
    </button>
</div>

<!-- 搜索筛选卡片 -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label text-muted small">搜索条件</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input class="form-control" placeholder="搜索分成类型..." @bind="search" @bind:event="oninput" />
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">所属公会</label>
                <select class="form-select" @bind="selectedGuildId">
                    <option value="">全部公会</option>
                    @foreach (var g in guilds)
                    {
                        <option value="@g.Id">@g.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <div class="btn-group w-100">
                    <button class="btn btn-primary" @onclick="OnSearch">
                        <i class="bi bi-search me-1"></i>搜索
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="ResetSearch">
                        <i class="bi bi-arrow-clockwise me-1"></i>重置
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (compositions == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">加载中...</span>
        </div>
        <p class="text-muted mt-3">数据加载中...</p>
    </div>
}
else if (!compositions.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="bi bi-diagram-3" style="font-size: 3rem; color: #6c757d;"></i>
            </div>
            <h5 class="text-muted">暂无分成类型数据</h5>
            <p class="text-muted">点击上方"新增分成类型"按钮开始添加</p>
            <button class="btn btn-primary" @onclick="ShowAdd">
                <i class="bi bi-plus-lg me-2"></i>新增分成类型
            </button>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-tag me-2"></i>名称
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-card-text me-2"></i>描述
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-building me-2"></i>所属公会
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-percent me-2"></i>分成比例
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-calculator me-2"></i>税率
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-check-circle me-2"></i>是否分成项
                            </th>
                            <th class="border-0 fw-semibold">
                                <i class="bi bi-calendar me-2"></i>创建时间
                            </th>
                            <th class="border-0 fw-semibold text-center" width="200">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in compositions)
                        {
                            <tr class="align-middle">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                                            <span class="text-white small fw-bold">@c.Name.Take(1).FirstOrDefault()</span>
                                        </div>
                                        <span class="fw-semibold">@c.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@(!string.IsNullOrEmpty(c.Description) ? c.Description : "暂无描述")</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(c.GuildName))
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-building me-1"></i>@c.GuildName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success text-white fs-6">
                                        <i class="bi bi-percent me-1"></i>@((c.CommissionRate * 100).ToString("0.##"))%
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-danger text-white fs-6">
                                        <i class="bi bi-calculator me-1"></i>@((c.TaxRate * 100).ToString("0.##"))%
                                    </span>
                                </td>
                                <td>
                                    @if (c.IncludeInTotal)
                                    {
                                        <span class="badge bg-primary text-white">
                                            <i class="bi bi-check-circle me-1"></i>是
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-white">
                                            <i class="bi bi-x-circle me-1"></i>否
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@c.CreateAt.ToString("yyyy-MM-dd HH:mm")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-info" @onclick="() => ShowDetail(c)" title="查看详情">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-warning" @onclick="() => ShowEdit(c)" title="编辑">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" @onclick="() => DeleteCommissionType(c.Id)" title="删除">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 分页 -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(pageIndex == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="PrevPage">
                    <i class="bi bi-chevron-left"></i> 上一页
                </button>
            </li>
            <li class="page-item disabled">
                <span class="page-link bg-light">第 @pageIndex 页 / 共 @totalPages 页</span>
            </li>
            <li class="page-item @(pageIndex == totalPages ? "disabled" : "")">
                <button class="page-link" @onclick="NextPage">
                    下一页 <i class="bi bi-chevron-right"></i>
                </button>
            </li>
        </ul>
    </nav>
}

<!-- 详情弹窗 -->
<div class="modal fade @(showDetailModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseDetailModal">
    <div class="modal-dialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">分成类型详情</h5>
                <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
            </div>
            <div class="modal-body">
                @if (selectedComposition != null)
                {
                    <div><strong>名称：</strong> @selectedComposition.Name</div>
                    <div><strong>描述：</strong> @selectedComposition.Description</div>
                    <div><strong>所属公会：</strong> @selectedComposition.GuildName</div>
                    <div><strong>分成比例：</strong> @((selectedComposition.CommissionRate * 100).ToString("0.##"))%</div>
                    <div><strong>税率：</strong> @((selectedComposition.TaxRate * 100).ToString("0.##"))%</div>
                    <div><strong>是否分成项：</strong> @(selectedComposition.IncludeInTotal ? "是" : "否")</div>
                    <div><strong>创建时间：</strong> @selectedComposition.CreateAt.ToString("yyyy-MM-dd HH:mm")</div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseDetailModal">关闭</button>
            </div>
        </div>
    </div>
</div>

<!-- 编辑弹窗 -->
<div class="modal fade @(showEditModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseEditModal">
    <div class="modal-dialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">编辑分成类型</h5>
                <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
            </div>
            <div class="modal-body">
                @if (editComposition != null)
                {
                    <div class="mb-3">
                        <label class="form-label">名称</label>
                        <input class="form-control" @bind="editComposition.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">描述</label>
                        <input class="form-control" @bind="editComposition.Description" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">所属公会</label>
                        <select class="form-select" @bind="editComposition.GuildId">
                            <option value="">请选择公会</option>
                            @foreach (var g in guilds)
                            {
                                <option value="@g.Id">@g.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">分成比例</label>
                        <input class="form-control" type="number" step="0.01" @bind="editComposition.CommissionRate" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">税率</label>
                        <input class="form-control" type="number" step="0.01" @bind="editComposition.TaxRate" />
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="editComposition.IncludeInTotal" id="editIncludeInTotal" />
                            <label class="form-check-label" for="editIncludeInTotal">
                                是否分成项
                            </label>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" @onclick="SaveEdit">保存</button>
                <button class="btn btn-secondary" @onclick="CloseEditModal">取消</button>
            </div>
        </div>
    </div>
</div>

<!-- 新增弹窗 -->
<div class="modal fade @(showAddModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseAddModal">
    <div class="modal-dialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">新增分成类型</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                @if (addComposition != null)
                {
                    <div class="mb-3">
                        <label class="form-label">名称</label>
                        <input class="form-control" @bind="addComposition.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">描述</label>
                        <input class="form-control" @bind="addComposition.Description" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">所属公会</label>
                        <select class="form-select" @bind="addComposition.GuildId">
                            <option value="">请选择公会</option>
                            @foreach (var g in guilds)
                            {
                                <option value="@g.Id">@g.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">分成比例</label>
                        <input class="form-control" type="number" step="0.01" @bind="addComposition.CommissionRate" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">税率</label>
                        <input class="form-control" type="number" step="0.01" @bind="addComposition.TaxRate" />
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="addComposition.IncludeInTotal" id="addIncludeInTotal" />
                            <label class="form-check-label" for="addIncludeInTotal">
                                是否分成项
                            </label>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" @onclick="SaveAdd">保存</button>
                <button class="btn btn-secondary" @onclick="CloseAddModal">取消</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<CommissionTypeResult>? compositions;
    private int pageIndex = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private string search = string.Empty;

    private List<GuildResult> guilds = new();
    private Guid? selectedGuildId = null;

    private CommissionTypeResult? selectedComposition;
    private bool showDetailModal = false;

    private CommissionTypeResult? editComposition;
    private bool showEditModal = false;

    private CommissionTypeResult? addComposition;
    private bool showAddModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadGuilds();
        await LoadData();
    }

    private async Task LoadGuilds()
    {
        var result = await ApiService.GetAsync<BerryResult<List<GuildResult>>>("api/v1/guild/list?pageIndex=1&pageSize=100");
        guilds = result?.Data ?? new List<GuildResult>();
    }

    private async Task LoadData()
    {
        var guildParam = selectedGuildId.HasValue ? $"&guildId={selectedGuildId}" : "";
        var query = $"api/v1/commissiontype/list?search={search}{guildParam}&pageIndex={pageIndex}&pageSize={pageSize}";
        var result = await ApiService.GetAsync<BerryResult<List<CommissionTypeResult>>>(query);
        compositions = result?.Data ?? new List<CommissionTypeResult>();
        totalPages = (result?.TotalCount / pageSize) ?? 1;
    }

    private async Task OnSearch()
    {
        pageIndex = 1;
        await LoadData();
    }

    private async Task ResetSearch()
    {
        search = string.Empty;
        selectedGuildId = null;
        pageIndex = 1;
        await LoadData();
    }

    private async Task PrevPage()
    {
        if (pageIndex > 1)
        {
            pageIndex--;
            await LoadData();
        }
    }

    private async Task NextPage()
    {
        if (pageIndex < totalPages)
        {
            pageIndex++;
            await LoadData();
        }
    }

    private void ShowDetail(CommissionTypeResult composition)
    {
        selectedComposition = composition;
        showDetailModal = true;
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedComposition = null;
    }

    private void ShowEdit(CommissionTypeResult composition)
    {
        editComposition = new CommissionTypeResult
        {
            Id = composition.Id,
            Name = composition.Name,
            Description = composition.Description,
            GuildId = composition.GuildId,
            CommissionRate = composition.CommissionRate,
            TaxRate = composition.TaxRate,
            IncludeInTotal = composition.IncludeInTotal
        };
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editComposition = null;
    }

    private async Task SaveEdit()
    {
        if (editComposition != null)
        {
            var entity = new CommissionTypeEntity
            {
                Id = editComposition.Id,
                Name = editComposition.Name,
                Description = editComposition.Description,
                GuildId = editComposition.GuildId,
                CommissionRate = editComposition.CommissionRate,
                TaxRate = editComposition.TaxRate,
                IncludeInTotal = editComposition.IncludeInTotal
            };
            var result = await ApiService.PutAsync<CommissionTypeEntity>("api/v1/commissiontype/update", entity);
            await LoadData();
            CloseEditModal();
        }
    }

    private void ShowAdd()
    {
        addComposition = new CommissionTypeResult();
        addComposition.GuildId = selectedGuildId ?? Guid.Empty;
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        addComposition = null;
    }

    private async Task SaveAdd()
    {
        if (addComposition != null)
        {
            var entity = new CommissionTypeEntity
            {
                Name = addComposition.Name,
                Description = addComposition.Description,
                GuildId = addComposition.GuildId,
                CommissionRate = addComposition.CommissionRate,
                TaxRate = addComposition.TaxRate,
                IncludeInTotal = addComposition.IncludeInTotal
            };
            var result = await ApiService.PostAsync<CommissionTypeResult>("api/v1/commissiontype/create", entity);
            await LoadData();
            CloseAddModal();
        }
    }

    private async Task DeleteCommissionType(Guid commissionTypeId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "确定要删除这个分成类型吗？"))
        {
            try
            {
                var result = await ApiService.DeleteAsync<BerryResult<bool>>($"api/v1/commissiontype/delete/{commissionTypeId}");
                if (result?.Code == BerryResult.StatusCodeEnum.Success)
                {
                    await LoadData();
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"删除失败: {ex.Message}");
            }
        }
    }
}

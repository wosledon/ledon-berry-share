<!-- 流水类型选择弹窗 -->
<div class="modal fade @(showCommissionSelectorModal ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);" aria-modal="true" role="dialog" @onclick="CloseCommissionSelectorModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">选择流水类型</h5>
                <button type="button" class="btn-close" @onclick="CloseCommissionSelectorModal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input class="form-control" placeholder="搜索流水类型..." @bind="commissionSearch" @bind:event="oninput" />
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" @bind="selectedCommissionGuildId">
                            <option value="">全部公会</option>
                            @foreach (var g in guilds)
                            {
                                <option value="@g.Id">@g.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary" @onclick="SearchCommissionTypes">搜索</button>
                    </div>
                </div>
                @if (availableCommissionTypes == null)
                {
                    <p>加载中...</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var ct in availableCommissionTypes.Where(ct => !IsCommissionTypeSelected(ct)))
                        {
                            <div class="col-md-6 mb-2">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">@ct.Name</h6>
                                        <p class="card-text">@ct.Description</p>
                                        <small class="text-muted">佣金率: @ct.CommissionRate% | 税率: @ct.TaxRate%</small>
                                        <br />
                                        <button class="btn btn-sm btn-primary mt-2" @onclick="() => AddCommissionType(ct)">
                                            <i class="fas fa-plus"></i> 添加
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @if (!availableCommissionTypes.Where(ct => !IsCommissionTypeSelected(ct)).Any())
                    {
                        <div class="text-center text-muted">没有更多可选择的流水类型</div>
                    }
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseCommissionSelectorModal">关闭</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<GiftFlowTypeResult>? types;
    private int pageIndex = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private string search = string.Empty;

    private GiftFlowTypeResult? selectedType;
    private bool showDetailModal = false;

    private GiftFlowTypeResult? editType;
    private bool showEditModal = false;
    private List<CommissionTypeResult> editCommissionTypes = new();

    private GiftFlowTypeResult? addType;
    private bool showAddModal = false;
    private List<CommissionTypeResult> addCommissionTypes = new();

    // 流水类型选择相关
    private bool showCommissionSelectorModal = false;
    private List<CommissionTypeResult>? availableCommissionTypes;
    private string commissionSearch = string.Empty;
    private Guid? selectedCommissionGuildId = null;

    private List<GuildResult> guilds = new();
    private Guid? selectedGuildId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadGuilds();
        await LoadData();
    }

    private async Task LoadGuilds()
    {
        var result = await ApiService.GetAsync<BerryResult<List<GuildResult>>>("api/v1/guild/list?pageIndex=1&pageSize=100");
        guilds = result?.Data ?? new List<GuildResult>();
    }

    private async Task LoadData()
    {
        var guildParam = selectedGuildId.HasValue ? $"&guildId={selectedGuildId}" : "";
        var query = $"api/v1/giftflowtype/list?search={search}{guildParam}&pageIndex={pageIndex}&pageSize={pageSize}";
        var result = await ApiService.GetAsync<BerryResult<List<GiftFlowTypeResult>>>(query);
        types = result?.Data ?? new List<GiftFlowTypeResult>();
        totalPages = (result?.TotalCount / pageSize) ?? 1;
    }

    private async Task OnSearch()
    {
        pageIndex = 1;
        await LoadData();
    }

    private async Task ResetSearch()
    {
        search = string.Empty;
        selectedGuildId = null;
        pageIndex = 1;
        await LoadData();
    }

    private async Task PrevPage()
    {
        if (pageIndex > 1)
        {
            pageIndex--;
            await LoadData();
        }
    }

    private async Task NextPage()
    {
        if (pageIndex < totalPages)
        {
            pageIndex++;
            await LoadData();
        }
    }

    private async Task ShowDetail(GiftFlowTypeResult type)
    {
        // 获取详细信息，包括流水类型
        var result = await ApiService.GetAsync<BerryResult<GiftFlowTypeResult>>($"api/v1/giftflowtype/{type.Id}");
        selectedType = result?.Data ?? type;
        showDetailModal = true;
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedType = null;
    }

    private async Task ShowEdit(GiftFlowTypeResult type)
    {
        editType = new GiftFlowTypeResult
        {
            Id = type.Id,
            Name = type.Name,
            Description = type.Description,
            GuildId = type.GuildId
        };
        
        // 加载当前流水组成的流水类型
        await LoadEditCommissionTypes(type.Id);
        showEditModal = true;
    }

    private async Task LoadEditCommissionTypes(Guid giftFlowTypeId)
    {
        var result = await ApiService.GetAsync<BerryResult<GiftFlowTypeResult>>($"api/v1/giftflowtype/{giftFlowTypeId}");
        editCommissionTypes = result?.Data?.CommissionTypes ?? new List<CommissionTypeResult>();
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editType = null;
        editCommissionTypes.Clear();
    }

    private async Task SaveEdit()
    {
        if (editType != null)
        {
            // 先更新基本信息
            var result = await ApiService.PutAsync<GiftFlowTypeResult>("api/v1/giftflowtype/update", editType);
            
            // 然后更新流水类型组成
            if (editCommissionTypes.Any())
            {
                var commissionIds = editCommissionTypes.Select(ct => ct.Id).ToList();
                await ApiService.PostAsync<object>($"api/v1/commissiontype/bind/{editType.Id}", commissionIds);
            }
            else
            {
                // 如果没有选择任何流水类型，则解绑所有
                await ApiService.DeleteAsync<object>($"api/v1/commissiontype/unbind/{editType.Id}");
            }
            
            await LoadData();
            CloseEditModal();
        }
    }

    private void ShowAdd()
    {
        addType = new GiftFlowTypeResult();
        addType.GuildId = selectedGuildId ?? Guid.Empty;
        addCommissionTypes.Clear();
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        addType = null;
        addCommissionTypes.Clear();
    }

    private async Task SaveAdd()
    {
        if (addType != null)
        {
            // 先创建流水组成
            var entity = new GiftFlowTypeEntity
            {
                Name = addType.Name,
                Description = addType.Description,
                GuildId = addType.GuildId
            };
            
            var result = await ApiService.PostAsync<BerryResult<GiftFlowTypeResult>>("api/v1/giftflowtype/create", entity);
            
            // 如果有选择的流水类型，绑定它们
            if (result?.Data != null && addCommissionTypes.Any())
            {
                var commissionIds = addCommissionTypes.Select(ct => ct.Id).ToList();
                await ApiService.PostAsync<object>($"api/v1/commissiontype/bind/{result.Data.Id}", commissionIds);
            }
            
            await LoadData();
            CloseAddModal();
        }
    }

    // 流水类型选择相关方法
    private async Task ShowCommissionTypeSelector()
    {
        await LoadCommissionTypes();
        showCommissionSelectorModal = true;
    }

    private void CloseCommissionSelectorModal()
    {
        showCommissionSelectorModal = false;
        availableCommissionTypes = null;
        commissionSearch = string.Empty;
        selectedCommissionGuildId = null;
    }

    private async Task LoadCommissionTypes()
    {
        var guildParam = selectedCommissionGuildId.HasValue ? $"&guildId={selectedCommissionGuildId}" : "";
        var query = $"api/v1/commissiontype/list?search={commissionSearch}{guildParam}&pageIndex=1&pageSize=100";
        var result = await ApiService.GetAsync<BerryResult<List<CommissionTypeResult>>>(query);
        availableCommissionTypes = result?.Data ?? new List<CommissionTypeResult>();
    }

    private async Task SearchCommissionTypes()
    {
        await LoadCommissionTypes();
    }

    private bool IsCommissionTypeSelected(CommissionTypeResult ct)
    {
        var currentList = showEditModal ? editCommissionTypes : addCommissionTypes;
        return currentList.Any(x => x.Id == ct.Id);
    }

    private void AddCommissionType(CommissionTypeResult ct)
    {
        var currentList = showEditModal ? editCommissionTypes : addCommissionTypes;
        if (!currentList.Any(x => x.Id == ct.Id))
        {
            currentList.Add(ct);
        }
    }

    private void RemoveCommissionType(CommissionTypeResult ct)
    {
        var currentList = showEditModal ? editCommissionTypes : addCommissionTypes;
        var item = currentList.FirstOrDefault(x => x.Id == ct.Id);
        if (item != null)
        {
            currentList.Remove(item);
        }
    }

    private async Task DeleteGiftFlowType(Guid giftFlowTypeId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "确定要删除这个流水组成吗？"))
        {
            try
            {
                var result = await ApiService.DeleteAsync<BerryResult<bool>>($"api/v1/giftflowtype/delete/{giftFlowTypeId}");
                if (result?.Code == BerryResult.StatusCodeEnum.Success)
                {
                    await LoadData();
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"删除失败: {ex.Message}");
            }
        }
    }
